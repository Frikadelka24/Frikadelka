import math

# Function to calculate the square of the distance between two points in space
def calculate_distance_squared(x1, y1, z1, x2, y2, z2):
    distance_squared = (x2 - x1)**2 + (y2 - y1)**2 + (z2 - z1)**2
    return distance_squared

# Coordinates of the planet (example values, you can change these)
planet_x, planet_y, planet_z = 1.0, 2.0, 3.0

# Coordinates of the Sun (example values, you can change these)
sun_x, sun_y, sun_z = 0.0, 0.0, 0.0

# Calculate the square of the distance
distance_squared = calculate_distance_squared(planet_x, planet_y, planet_z, sun_x, sun_y, sun_z)

# Print the result
print(f"The square of the distance between the planet and the Sun is: {distance_squared}")
